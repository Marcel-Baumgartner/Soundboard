<Window x:Class="Soundboard.InstantButtonSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Soundboard"
        mc:Ignorable="d"
        Title="Instant Button Settings" Height="356.866" Width="245.315" ResizeMode="NoResize" Icon="Speaker.png">
    <Grid Background="#FF272643">
        <ListBox x:Name="instantButtonOptions" HorizontalAlignment="Left" Height="194" Margin="10,36,0,0" VerticalAlignment="Top" Width="210" Background="#FFE3F6F5" Foreground="#FF8EAFC2"/>
        <Button x:Name="applySaveButton" Content="Apply and Save" HorizontalAlignment="Left" Margin="10,263,0,0" VerticalAlignment="Top" Width="210" Height="44" Foreground="#FF2C698D" Background="#FFE3F6F5" Click="ApplySaveButton_Click"/>
        <TabControl x:Name="instantButtonSelect" HorizontalAlignment="Left" Height="26" Margin="10,5,0,0" VerticalAlignment="Top" Width="212" Background="#FFE3F6F5" Foreground="#FF2C698D" SelectionChanged="InstantButtonSelect_SelectionChanged"/>
        <Label x:Name="currentSelectedLabel" Content="No sound selected" HorizontalAlignment="Left" Margin="10,235,0,0" VerticalAlignment="Top" Width="210" Foreground="White"/>
    </Grid>
</Window>
